{
  "name": "reactWebpackBoilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for writing React apps. Includes Webpack, Web Dev Server (HMR) and Sass compilation.",
  "main": "",
  "scripts": {
    "build-app": "webpack -p",
    "dev-server": "node dev-server.js",
    "build-css": "node-sass --include-path scss src/scss/*.scss build/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "Matt Richards",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "history": "^1.17.0",
    "nodemon": "^1.8.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "react-router": "^2.0.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1",
    "node-sass": "^3.4.2",
    "style-loader": "^0.13.0",
    "sass-loader": "^3.1.2",
    "autoprefixer-loader": "^3.1.0",
    "css-loader": "^0.23.0"
  },
  "dependencies": {
    "extract-text-webpack-plugin": "^1.0.1"
  }
}
